<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mid_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/mid_blue</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ModalTitle">
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/mid_grey</item>
    </style>

    <style name="MainTitle">
        <item name="android:textSize">22.7sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InfoTitle">
        <item name="android:textSize">22.7sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/semilight_grey</item>
    </style>

    <style name="MainConnection">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="MainConnectionBold">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="MenuItem">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/mid_grey</item>
    </style>

    <style name="NormalTextDark">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="NormalTextLight">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="ModalActions">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/mid_grey</item>
    </style>

    <style name="ModalInfoTags">
        <item name="android:textSize">12.7sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/mid_grey</item>
    </style>

    <style name="InfoTagsDark">
        <item name="android:textSize">13.7sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="InfoTagLight">
        <item name="android:textSize">14.7sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/semilight_grey</item>
    </style>
</resources>

